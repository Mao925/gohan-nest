generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                      String                 @id @default(uuid())
  email                   String                 @unique
  passwordHash            String
  isAdmin                 Boolean                @default(false)
  hasCompletedOnboarding  Boolean                @default(false)
  communityInvitesCreated CommunityInvite[]      @relation("CommunityInviteCreatedBy")
  communityInvitesUsed    CommunityInvite[]      @relation("CommunityInviteUsedBy")
  createdAt               DateTime               @default(now())
  lineUserId              String?                @unique
  lineDisplayName         String?
  linePictureUrl          String?
  availability            AvailabilitySlot[]
  memberships             CommunityMembership[]
  hostedGroupMeals        GroupMeal[]            @relation("GroupMealHost")
  sentGroupMealInvites    GroupMealCandidate[]   @relation("GroupMealCandidateInviter")
  invitedGroupMeals       GroupMealCandidate[]   @relation("GroupMealCandidateUser")
  groupMealParticipants   GroupMealParticipant[]
  createdGroupMeals       GroupMeal[]            @relation("GroupMealCreator")
  likesFrom               Like[]                 @relation("likesFrom")
  likesTo                 Like[]                 @relation("likesTo")
  matches1                Match[]                @relation("user1")
  matches2                Match[]                @relation("user2")
  profile                 Profile?
}

model Profile {
  id              String           @id @default(cuid())
  userId          String           @unique
  name            String?
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  isSeedMember    Boolean?         @ignore
  favoriteMeals   String[]         @default([])
  profileImageUrl String?
  mainArea        String?
  subAreas        String[]         @default([])
  areas           String[]         @default([])
  defaultBudget   GroupMealBudget?
  drinkingStyle   DrinkingStyle?
  ngFoods         String[]         @default([])
  bio             String?
  mealStyle       MealStyle?
  goMealFrequency GoMealFrequency?
  hobbies         String[]         @default([])
  user            User             @relation(fields: [userId], references: [id])
}

model Community {
  id          String                @id @default(uuid())
  name        String
  inviteCode  String                @unique
  invites     CommunityInvite[]
  createdAt   DateTime              @default(now())
  memberships CommunityMembership[]
  groupMeals  GroupMeal[]
  likes       Like[]
  matches     Match[]
}

model CommunityInvite {
  id          String    @id @default(uuid())
  token       String    @unique
  communityId String
  community   Community @relation(fields: [communityId], references: [id])

  createdByUserId String
  createdByUser   User   @relation("CommunityInviteCreatedBy", fields: [createdByUserId], references: [id])

  usedByUserId String?
  usedByUser   User?   @relation("CommunityInviteUsedBy", fields: [usedByUserId], references: [id])

  usedAt    DateTime?
  createdAt DateTime  @default(now())
  expiresAt DateTime

  @@index([communityId])
}

model CommunityMembership {
  id                 String           @id @default(uuid())
  userId             String
  communityId        String
  status             MembershipStatus @default(pending)
  createdAt          DateTime         @default(now())
  community          Community        @relation(fields: [communityId], references: [id])
  user               User             @relation(fields: [userId], references: [id])
  hostedGroupMeals   GroupMeal[]      @relation("GroupMealHostMembership")
  pairMealsCreated   PairMeal[]       @relation("PairMealCreator")
  pairMealsAsMemberA PairMeal[]       @relation("PairMealMemberA")
  pairMealsAsMemberB PairMeal[]       @relation("PairMealMemberB")

  @@unique([userId, communityId])
}

model Like {
  id          String     @id @default(uuid())
  fromUserId  String
  toUserId    String
  communityId String
  answer      LikeAnswer
  createdAt   DateTime   @default(now())
  community   Community  @relation(fields: [communityId], references: [id])
  fromUser    User       @relation("likesFrom", fields: [fromUserId], references: [id])
  toUser      User       @relation("likesTo", fields: [toUserId], references: [id])

  @@unique([fromUserId, toUserId, communityId])
}

model Match {
  id          String     @id @default(uuid())
  user1Id     String
  user2Id     String
  communityId String
  createdAt   DateTime   @default(now())
  community   Community  @relation(fields: [communityId], references: [id])
  user1       User       @relation("user1", fields: [user1Id], references: [id])
  user2       User       @relation("user2", fields: [user2Id], references: [id])
  pairMeals   PairMeal[]

  @@unique([user1Id, user2Id, communityId])
}

model PairMeal {
  id                 String              @id @default(cuid())
  matchId            String
  memberAId          String
  memberBId          String
  date               String
  timeBand           ScheduleTimeBand
  meetingTimeMinutes Int?
  placeName          String?
  placeAddress       String?
  placeLatitude      Float?
  placeLongitude     Float?
  placeGooglePlaceId String?
  restaurantName     String?
  restaurantAddress  String?
  status             PairMealStatus      @default(CONFIRMED)
  createdByMemberId  String
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
  createdBy          CommunityMembership @relation("PairMealCreator", fields: [createdByMemberId], references: [id])
  match              Match               @relation(fields: [matchId], references: [id], onDelete: Cascade)
  memberA            CommunityMembership @relation("PairMealMemberA", fields: [memberAId], references: [id])
  memberB            CommunityMembership @relation("PairMealMemberB", fields: [memberBId], references: [id])
}

model AvailabilitySlot {
  id        Int                @id @default(autoincrement())
  userId    String
  weekday   Weekday
  timeSlot  TimeSlot
  status    AvailabilityStatus
  createdAt DateTime           @default(now())
  updatedAt DateTime           @updatedAt
  user      User               @relation(fields: [userId], references: [id])

  @@unique([userId, weekday, timeSlot])
}

model GroupMeal {
  id                 String                 @id @default(uuid())
  communityId        String
  hostUserId         String
  title              String?
  date               DateTime
  weekday            Weekday
  timeSlot           TimeSlot
  capacity           Int
  status             GroupMealStatus        @default(OPEN)
  createdAt          DateTime               @default(now())
  updatedAt          DateTime               @updatedAt
  budget             GroupMealBudget?
  meetingPlace       String?                @db.VarChar(255)
  hostMembershipId   String?
  meetingTimeMinutes Int?
  placeAddress       String?
  placeGooglePlaceId String?
  placeLatitude      Float?
  placeLongitude     Float?
  placeName          String?
  mode               GroupMealMode          @default(REAL)
  mealTimeSlot       MealTimeSlot?
  locationName       String?
  latitude           Float?
  longitude          Float?
  meetUrl            String?
  talkTopics         String[]
  createdByUserId    String?
  createdBy          User?                  @relation("GroupMealCreator", fields: [createdByUserId], references: [id])
  expiresAt          DateTime?
  community          Community              @relation(fields: [communityId], references: [id])
  hostMembership     CommunityMembership?   @relation("GroupMealHostMembership", fields: [hostMembershipId], references: [id])
  host               User                   @relation("GroupMealHost", fields: [hostUserId], references: [id])
  candidates         GroupMealCandidate[]
  participants       GroupMealParticipant[]
}

model GroupMealCandidate {
  id              String    @id @default(cuid())
  groupMealId     String
  userId          String
  invitedByUserId String
  invitedAt       DateTime  @default(now())
  isCanceled      Boolean   @default(false)
  canceledAt      DateTime?
  firstOpenedAt   DateTime?
  lastOpenedAt    DateTime?
  groupMeal       GroupMeal @relation(fields: [groupMealId], references: [id])
  invitedBy       User      @relation("GroupMealCandidateInviter", fields: [invitedByUserId], references: [id])
  user            User      @relation("GroupMealCandidateUser", fields: [userId], references: [id])

  @@unique([groupMealId, userId])
  @@index([groupMealId])
  @@index([userId])
}

model GroupMealParticipant {
  id          String                     @id @default(uuid())
  groupMealId String
  userId      String
  isHost      Boolean                    @default(false)
  status      GroupMealParticipantStatus @default(INVITED)
  createdAt   DateTime                   @default(now())
  updatedAt   DateTime                   @updatedAt
  groupMeal   GroupMeal                  @relation(fields: [groupMealId], references: [id])
  user        User                       @relation(fields: [userId], references: [id])

  @@unique([groupMealId, userId])
}

enum MembershipStatus {
  pending
  approved
  rejected
}

enum LikeAnswer {
  YES
  NO
}

enum Weekday {
  MON
  TUE
  WED
  THU
  FRI
  SAT
  SUN
}

enum TimeSlot {
  DAY
  NIGHT
}

enum ScheduleTimeBand {
  LUNCH
  DINNER
}

enum PairMealStatus {
  CONFIRMED
  CANCELLED
}

enum AvailabilityStatus {
  AVAILABLE
  UNAVAILABLE
  MEET_ONLY
}

enum GroupMealStatus {
  OPEN
  FULL
  CLOSED
}

enum GroupMealBudget {
  UNDER_1000
  UNDER_1500
  UNDER_2000
  OVER_2000
}

enum DrinkingStyle {
  NO_ALCOHOL
  SOMETIMES
  ENJOY_DRINKING
}

enum MealStyle {
  TALK_DEEP
  CASUAL_CHAT
  BRAINSTORM
}

enum GoMealFrequency {
  WEEKLY
  BIWEEKLY
  MONTHLY
}

enum GroupMealParticipantStatus {
  INVITED
  JOINED
  DECLINED
  CANCELLED
  LATE
}

enum GroupMealMode {
  REAL
  MEET
}

enum MealTimeSlot {
  LUNCH
  DINNER
}
